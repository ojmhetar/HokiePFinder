<body>
	<div class="row col-lg-12" id="top">
			<h1>Hokie Passport Finder</h1>
	</div>

<div class="row col-lg-12">

        <!-- I found my Hokie Passport -->
		<div class="col-lg-12" id="but">

			<a href="#found" role="button" class="btn btn-default btn-lg" id="lost-or-found" data-toggle="modal">I found a passport</a>
			<div class="modal fade" id="found">
			  <div class="modal-dialog modal-vertical-centered">
			    <div class="modal-content">
			      <div class="modal-body">
					<form class="form-horizontal" id="formAddUser" name="adduser" method="post" action="/passport">


							<div class="controls">
								<input id="idnumber" type="number" max="9999" maxlength="4" placeholder="Last 4 digits of ID number" name="idnumber" required/>
							</div>

                            <div class="controls">
                                <input id="lastname" type="text" maxlength="30" placeholder="Last name on ID" name="lastname" required/>
                            </div>

                            <div class="controls">
								<input id="email" type="email" placeholder="Your E-mail" name="contactemail" required/>
							</div>


			       <center> <button type="submit" class="btn btn-default btn-lg center" id="form-button">Submit</button></center>
                </form>

			      </div>
			    </div><!-- /.modal-content -->
			  </div><!-- /.modal-dialog -->
			</div><!-- /.modal -->
		</div>

    <!-- I lost a Hokie Passport -->
		<div class="col-lg-12" id="but">

			<a href="#lost" role="button" class="btn btn-default btn-lg" id="lost-or-found" data-toggle="modal">I lost my passport</a>

			<div class="modal fade" id="lost">
			  <div class="modal-dialog modal-vertical-centered">
			    <div class="modal-content">
			      <div class="modal-body">
					<form class="form-horizontal" id="formAddUser" name="adduser" method="post" action="/findmine">


							<div class="controls">
								<input id="inputDigits" maxlength="4" type="number" max="9999" placeholder="Last 4 digits of your ID number" name="idnum" required/>
							</div>

							<div class="controls">
								<input id="lastnamelast" maxlength="30" type="text" placeholder="Last name on ID" name="lastnamelost" required/>
							</div>

							<div class="controls">
								<input id="owneremail" maxlength="30" type="email" placeholder="Your email" name="owneremail" required/>
							</div>

					<!--CHANGE THIS IF YOU WANT TO CHANGE THE RESULT!-->
                    <!-- <a href="#foundResult" role="button" class="btn btn-default btn-lg" id="form-button" data-dismiss="modal" data-toggle="modal">Search</a> -->
                    <button type="submit" class="btn btn-default btn-lg center" id="form-button">Submit</button>


                </form>

			      </div>
			    </div><!-- /.modal-content -->
			  </div><!-- /.modal-dialog -->
			</div><!-- /.modal -->
		</div>


<!-- The form for if it is LOST-->
    <div class="modal fade" id="lostResult">
        <div class="modal-dialog modal-vertical-centered">
            <div class="modal-content">
			     <div class="modal-body">

                    <h3>Not found yet</h3>

                        <div class="controls">
				            <input id="inputDigits" type="tel" placeholder="your phone #" name="digits"/>
				        </div>
                        <div class="controls">
                            <input id="inputYo" type="text" placeholder="'Yo' username" name="yo"/>
					   </div>
                       <center>
                       <button type="submit" class="btn btn-default btn-lg center" id="form-button">notify me</button>
                       </center>

			     </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->

<!-- The form for if it is FOUND-->
    <div class="modal fade" id="foundResult">
        <div class="modal-dialog modal-vertical-centered">
            <div class="modal-content">
			     <div class="modal-body">

                    <h3>Results</h3>

                     <div id="found-bold">Location:</div>
                     <div id="found-text">Squires Student Center</div>

                     <br> <br>
                     <div id="found-bold">Thank:</div>
                     <div id="found-text">Jordan White</div>
                     <div id="found-text">704-394-2342</div>

			      </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->

</div>



